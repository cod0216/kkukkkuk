{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@/*": ["src/*"]
    },
    "types": ["node", "react"],
    "moduleResolution": "node",
    "module": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./custom_typings"]
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
